<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinema_CATF.LoginPage"
             Title="Login">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="Center">
                <StackLayout>
                    <Label Text="Usuario"/>
                    <Entry Keyboard="Usuario"/>
                </StackLayout>
                <StackLayout>
                    <Label Text="Password"/>
                    <Entry IsPassword="True"/>
                </StackLayout>
            </StackLayout>
            
            <StackLayout VerticalOptions="End">
                <Button Text="Ingresar" Clicked="Ingreso_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>